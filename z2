from random import randrange

num = randrange(1,101)

print ("Угадай число за 7 попыток")

for i in range(1,8):
    ent = int(input('Число: '))
    if ( i == 7 ) and (ent != num):
        print("Попробуй еще раз")
    elif ent < num:
        print("Больше")
    elif ent >num:
        print("Меньше")
    elif ent == num:
        print("В яблочко")
